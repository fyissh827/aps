SELECT rp.id AS r_id, rp.message AS r_message, rp.file AS r_file, rp.file_type AS r_file_type, rp.seen AS r_seen, pm.id, pm.sender, CASE WHEN pm.sender = '59' THEN 'true' else 'false' END AS fromSelf , pm.reciever, pm.message, pm.accelerator, pm.file, pm.file_type, pm.status , pm.seen, pm.url, pm.created_at, pm.iso FROM private_message pm LEFT JOIN private_message rp ON rp.id = pm.accelerator WHERE pm.sender = '59' AND pm.reciever = '76' ORDER BY pm.id DESC